<div class="action_name"><h2>Edit — <%=h @known_value.name %></h2>
	<div class="actions">
		<%= link_to 'Show', @known_value %> |
		<%= link_to 'Back', :back %> | 
		<%= link_to 'Destroy', @known_value, :confirm => 'Are you sure?', :method => :delete %>
	</div>
</div>

<% form_for(@known_value, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

<div class="block_full_width">
	<h3><%= f.label :name %></h3>
	<div class="separator"></div>
	<div class="container">
		<%= f.text_field :name %>
	</div>
</div>

<div class="block_full_width">
	<h3>Name, that will be used in models</h3>
	<div class="separator"></div>
	<div class="container">
		<table class="block">
			<tr>
				<td class="half"><%= f.text_field :name_short %></td>
				<td class="half">
						<p>This name will be used as name of variable of model.</p>
						<p>Please, at least 3 symbols length and contain only small latin symbols (or underscore sign).</p>
				</td>
			</tr>
		</table>		 
	</div>
</div>

<div class="block_full_width">
	<h3>Upload data from file</h3>
	<div class="separator"></div>
	<div class="container">
		<table class="block">
			<tr>
				<td class="half"><%= f.file_field :uploadfile %></td>
				<td class="half">
						<p>You can upload data from file.</p>
						<p>Format of file — on each string have to be country name and value.</p>
						<h3>Example</h3>
						<p>
						<code>Ukraine&nbsp;&nbsp;3,34%<br />
							  Urugvay&nbsp;&nbsp;-2,45%</code>
						</p>
				</td>
			</tr>
		</table>		 
	</div>
</div>
